<%# Portal Banner %>
<section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden bg-verdone">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <%= image_tag 'backgrounds/sfondo_strada.webp',
        class: 'w-full h-full object-cover opacity-30',
        alt: 'Salim ODV - Kenya' %>
  </div>

  <!-- Banner Content -->
  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <h1 class="font-saira text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6">
      <%= t('home.title') %>
    </h1>
    <p class="font-prompt text-lg md:text-xl text-verdino mb-8 max-w-2xl mx-auto">
      <%= t('home.subtitle') %>
    </p>
    <div class="mt-8">
      <%= link_to "https://salimodv.org/#{I18n.locale == :it ? '' : I18n.locale}", target: '_blank', rel: 'noopener noreferrer',
          class: 'inline-flex items-center gap-2 bg-transparent border-2 border-verdino text-verdino hover:bg-verdino hover:text-verdone font-saira font-semibold px-8 py-3 rounded-lg transition-colors duration-200 text-lg' do %>
        <%= t('home.visit_link') %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
      <% end %>
    </div>
  </div>
</section>
