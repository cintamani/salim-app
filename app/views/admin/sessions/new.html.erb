<div class="min-h-screen flex items-center justify-center bg-verdone">
  <div class="max-w-md w-full mx-4">
    <div class="bg-white rounded-xl shadow-xl p-8">
      <div class="text-center mb-8">
        <%= image_tag 'logos/logo_extended_green_1.svg', alt: 'Salim ODV', class: 'h-16 mx-auto mb-4' %>
        <h1 class="font-saira text-2xl font-bold text-verdone">Admin Login</h1>
      </div>

      <%= form_with url: admin_login_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" name="email" id="email" required autofocus
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors">
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input type="password" name="password" id="password" required
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors">
        </div>

        <button type="submit"
                class="w-full bg-primary hover:bg-salim-green-600 text-white font-saira font-semibold py-3 rounded-lg transition-colors duration-200">
          Accedi
        </button>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "Torna al sito", root_path, class: "text-sm text-gray-500 hover:text-primary transition-colors" %>
      </div>
    </div>
  </div>
</div>
